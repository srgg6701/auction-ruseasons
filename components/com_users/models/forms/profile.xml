<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="core"
		label="COM_USERS_PROFILE_DEFAULT_LABEL">

		<field name="id" type="hidden"
			filter="integer"
		/>

		<field name="name" type="text"
			description="COM_USERS_PROFILE_NAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_NAME_LABEL"
			message="COM_USERS_PROFILE_NAME_MESSAGE"
			required="true"
			size="30"
		/>

		<field name="username" type="text"
			class="validate-username"
			description="COM_USERS_DESIRED_USERNAME"
			filter="username"
			label="COM_USERS_PROFILE_USERNAME_LABEL"
			message="COM_USERS_PROFILE_USERNAME_MESSAGE"
			required="true"
			size="30"
			validate="username"
		/>

		<field name="password1" type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_DESIRED_PASSWORD"
			field="password2"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD1_LABEL"
			message="COM_USERS_PROFILE_PASSWORD1_MESSAGE"
			size="30"
			validate="equals"
		/>

		<field name="password2" type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_PROFILE_PASSWORD2_DESC"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD2_LABEL"
			message="COM_USERS_PROFILE_PASSWORD2_MESSAGE"
			size="30"
		/>

		<field name="email1" type="email"
			description="COM_USERS_PROFILE_EMAIL1_DESC"
			filter="string"
			label="COM_USERS_PROFILE_EMAIL1_LABEL"
			message="COM_USERS_PROFILE_EMAIL1_MESSAGE"
			required="true"
			size="30"
			unique="true"
			validate="email"
		/>

		<field name="email2" type="email"
			description="COM_USERS_PROFILE_EMAIL2_DESC"
			field="email1"
			filter="string"
			label="COM_USERS_PROFILE_EMAIL2_LABEL"
			message="COM_USERS_PROFILE_EMAIL2_MESSAGE"
			required="true"
			size="30"
			validate="equals"
		/>
		<!--	/*	MODIFIED START */
					XTRA FIELDS

Фамилия				lastname
Отчество			middlename
Телефон				phone_number			
Адрес				country_id
					zip 
					city
					street
					house_number 
					corpus_number 
					flat_office_number -->
					
		<field name="lastname" type="text"
			description="COM_USERS_PROFILE_LASTNAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_LASTNAME_LABEL"
			message="COM_USERS_PROFILE_LASTNAME_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="middlename" type="text"
			description="COM_USERS_PROFILE_MIIDLENAME_DESC"
			filter="string"
			label="COM_USERS_PROFILE_MIDDLENAME_LABEL"
			message="COM_USERS_PROFILE_MIIDLENAME_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="phone_number" type="text"
			description="COM_USERS_PROFILE_PHONE_NUMBER_DESC"
			filter="raw"
			label="COM_USERS_PROFILE_PHONE_NUMBER_LABEL"
			message="COM_USERS_PROFILE_PHONE_NUMBER_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="country_id" type="text"
			description="COM_USERS_COUNTRY_ID_DESC"
			filter="integer"
			label="COM_USERS_PROFILE_COUNTRY_ID_LABEL"
			message="COM_USERS_PROFILE_COUNTRY_ID_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="zip" type="text"
			description="COM_USERS_PROFILE_ZIP_DESC"
			filter="string"
			label="COM_USERS_PROFILE_ZIP_LABEL"
			message="COM_USERS_PROFILE_ZIP_MESSAGE"
			size="30"
		/>
					
		<field name="city" type="text"
			description="COM_USERS_PROFILE_CITY_DESC"
			filter="string"
			label="COM_USERS_PROFILE_CITY_LABEL"
			message="COM_USERS_PROFILE_CITY_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="street" type="text"
			description="COM_USERS_PROFILE_STREET_DESC"
			filter="string"
			label="COM_USERS_PROFILE_STREET_LABEL"
			message="COM_USERS_PROFILE_STREET_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="house_number" type="text"
			description="COM_USERS_PROFILE_HOUSE_NUMBER_DESC"
			filter="string"
			label="COM_USERS_PROFILE_HOUSE_NUMBER_LABEL"
			message="COM_USERS_PROFILE_HOUSE_NUMBER_MESSAGE"
			required="true"
			size="30"
		/>
					
		<field name="corpus_number" type="text"
			description="COM_USERS_PROFILE_CORPUS_NUMBER_DESC"
			filter="string"
			label="COM_USERS_PROFILE_CORPUS_NUMBER_LABEL"
			message="COM_USERS_PROFILE_CORPUS_NUMBER_MESSAGE"
			size="30"
		/>
					
		<field name="flat_office_number" type="text"
			description="COM_USERS_PROFILE_FLAT_OFFICE_NUMBER_DESC"
			filter="string"
			label="COM_USERS_PROFILE_FLAT_OFFICE_NUMBER_LABEL"
			message="COM_USERS_PROFILE_FLAT_OFFICE_NUMBER_MESSAGE"
			size="30"
		/>
					
		<!--	/*	MODIFIED END	*/--> 
		
	</fieldset>
</form>